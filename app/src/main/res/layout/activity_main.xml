<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#B0C4DE">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Pokémon Finder"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2F4F4F"
        android:layout_marginBottom="32dp" />

    <!-- Pokémon Card Container-->
    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_card_bg"
        android:padding="20dp"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp">


        <!-- Pokémon Name -->
        <TextView
            android:id="@+id/tvPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Pokémon Sprite -->
        <ImageView
            android:id="@+id/ivPokemonSprite"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="#3A3A3A"
            android:scaleType="fitXY"
            android:contentDescription="Pokémon sprite"
            android:padding="8dp" />

        <!-- Pokémon Type -->
        <LinearLayout
            android:id="@+id/typesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">



        </LinearLayout>

    </LinearLayout>

    <!-- Get Random Pokémon Button -->
    <Button
        android:id="@+id/btnGetPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Random Pokémon"
        android:textSize="16sp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:gravity="center" />

    <!-- Loading/Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the button to find a Pokémon!"
        android:textSize="14sp"
        android:textColor="#2F4F4F"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout>